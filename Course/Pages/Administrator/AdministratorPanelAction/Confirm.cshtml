@page
@model Course.Pages.Administrator.AdministratorPanelAction.ConfirmModel
@{
}
<form method="post">
    <p>Описание достижения - @Model.Achievement.Description</p>
    <p>Тип достижения - @Model.Achievement.AchievementType</p>
    <label asp-for="FailMassage" class="control-label"></label>
    <input asp-for="FailMassage" class="form-control" />
    <input type="hidden" asp-for="Achievement.ID" />
    <span asp-validation-for="FailMassage" class="text-danger"></span>
    <input type="submit" value="Подтвердить" class="btn btn-success" /> |
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

